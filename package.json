{
  "name": "discord-multilingual-translator",
  "version": "1.0.0",
  "description": "AI-powered Discord bot for real-time multilingual voice translation supporting 60+ languages with Google Gemini, OpenAI, and DeepL",
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc",
    "start": "node --max-old-space-size=256 dist/index.js",
    "dev": "ts-node --max-old-space-size=256 src/index.ts",
    "watch": "tsc -w",
    "deploy-commands": "ts-node src/deploy-commands.ts",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage"
  },
  "keywords": [
    "discord",
    "bot",
    "translation",
    "multilingual",
    "realtime",
    "voice-translation",
    "ai-translation",
    "gemini",
    "openai",
    "deepl",
    "speech-to-text",
    "language-detection",
    "i18n",
    "localization",
    "voice-chat",
    "discord-bot",
    "typescript",
    "japanese",
    "english",
    "korean",
    "chinese",
    "spanish",
    "french",
    "german",
    "60-languages"
  ],
  "author": "Lifegence Corporation.",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/lifegence/discord-aitranslate-bot.git"
  },
  "bugs": {
    "url": "https://github.com/lifegence/discord-aitranslate-bot/issues"
  },
  "homepage": "https://github.com/lifegence/discord-aitranslate-bot#readme",
  "dependencies": {
    "@discordjs/opus": "^0.9.0",
    "@discordjs/voice": "^0.19.0",
    "@google/generative-ai": "^0.21.0",
    "@snazzah/davey": "^0.1.7",
    "discord.js": "^14.24.2",
    "dotenv": "^16.4.5",
    "libsodium-wrappers": "^0.7.15",
    "prism-media": "^1.3.5",
    "sodium-native": "^5.0.9",
    "winston": "^3.15.0"
  },
  "devDependencies": {
    "@jest/globals": "^29.7.0",
    "@types/jest": "^29.5.13",
    "@types/libsodium-wrappers": "^0.7.14",
    "@types/node": "^22.9.0",
    "@types/ws": "^8.5.13",
    "jest": "^29.7.0",
    "ts-jest": "^29.2.5",
    "ts-node": "^10.9.2",
    "typescript": "^5.6.3"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
