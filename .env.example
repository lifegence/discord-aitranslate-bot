# Discord Bot Configuration
DISCORD_BOT_TOKEN=your_discord_bot_token_here
DISCORD_CLIENT_ID=your_discord_client_id_here

# Google Gemini API Configuration
GOOGLE_GEMINI_API_KEY=your_gemini_api_key_here

# Translation Configuration
DEFAULT_TARGET_LANGUAGE=ja
# Supported languages: ja (Japanese), en (English), ko (Korean), zh (Chinese), etc.

# Bot Configuration
LOG_LEVEL=info
# Options: error, warn, info, debug

# Audio Processing Configuration
AUDIO_CHUNK_SIZE_MS=500
# Chunk size in milliseconds for audio processing (200-1000 recommended)

VAD_ENABLED=true
# Voice Activity Detection to skip silent periods

# Optional: Gemini Model Configuration
GEMINI_MODEL=gemini-2.0-flash-exp
# Model to use for translation
